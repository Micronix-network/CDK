<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
  <package name="enginemonitor_plugin" extends="gaf" namespace="/enginemonitor">
  
    <action name="enginemonitor_entry" class="it.micronixnetwork.tcd.plugin.enginemonitor.action.MonitorAction">
      <result name="success" type="freemarker">/it/micronixnetwork/tcd/plugin/enginemonitor/view/Main.ftl</result>
    </action>
    
    <action name="check_active" class="it.micronixnetwork.tcd.plugin.enginemonitor.action.MonitorAction">
      <result name="success" type="freemarker">/it/micronixnetwork/tcd/plugin/enginemonitor/view/Status.ftl</result>
    </action>
    
    <action name="startEngine" class="it.micronixnetwork.tcd.plugin.enginemonitor.action.StartEngine">
      <result name="success" type="string">
			<param name="stringValue">${message}</param>
	  </result>
    </action>
    
    <action name="stopEngine" class="it.micronixnetwork.tcd.plugin.enginemonitor.action.StopEngine">
      <result name="success" type="string">
			<param name="stringValue">${message}</param>
	  </result>
    </action>
    
	
	<action name="propertiesRetrive" class="it.micronixnetwork.tcd.plugin.enginemonitor.action.MonitorProperties">
      <result name="success" type="freemarker">/it/micronixnetwork/tcd/plugin/enginemonitor/view/properties/Form.ftl</result>
    </action>
    
  </package>
</struts>
