 */
@Entity
@Table(name="loginvio")
public class LogInvio implements Serializable,Published {
	private static final long serialVersionUID = 1L;

	@Id
	@GeneratedValue(strategy=GenerationType.AUTO)
	public Long id;

	@ToView
	@SearchField(filtered = true)
	public String category;

	public String idUte;
	
	 @OneToOne
	 @JoinColumn(name = "idUte", insertable = false, updatable = false)
	 public _TCDUser utente;

	@ToView
	@SearchField(filtered = true)
	public String message;

	@ToView
	@SearchField(filtered = true,ordered = true,defaultOrdered = true, descendant = true)
	@Temporal(TemporalType.DATE)
	public Date time;

	@ToView
	@SearchField(filtered = true)
	private Integer type;

	public LogInvio() {
	}

	public Long getId() {
		return this.id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public String getCategory() {
		return this.category;
	}

	public void setCategory(String category) {
		this.category = category;
	}

	public String getIdUte() {
		return this.idUte;
	}

	public void setIdUte(String idUte) {
		this.idUte = idUte;
	}

	public String getMessage() {
		return this.message;
	}

	public void setMessage(String message) {
		this.message = message;
	}

	public Date getTime() {
		return this.time;
	}

	public void setTime(Date time) {
		this.time = time;
	}

	public Integer getType() {
		return this.type;
	}

	public void setType(Integer type) {
		this.type = type;
	}
	
