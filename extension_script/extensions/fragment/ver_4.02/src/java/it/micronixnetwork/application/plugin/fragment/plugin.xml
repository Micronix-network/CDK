<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
  <package name="fragment_plugin" extends="gaf" namespace="/fragment">
  
    <action name="fragment_entry" class="it.micronixnetwork.application.plugin.fragment.action.FragmentAction">
      <result name="success" type="freemarker">/it/micronixnetwork/application/plugin/fragment/view/Main.ftl</result>
    </action>
	
    <action name="propertiesRetrive" class="it.micronixnetwork.application.plugin.fragment.action.Properties">
      <result name="success" type="freemarker">/it/micronixnetwork/application/plugin/fragment/view/properties/Form.ftl</result>
    </action>
    
    <action name="runbatch" class="it.micronixnetwork.application.plugin.fragment.action.BatchAction">
      <result name="success" type="freemarker">/it/micronixnetwork/application/plugin/fragment/view/BatchResult.ftl</result>
    </action>
    
  </package>
</struts>
